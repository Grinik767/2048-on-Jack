class Tile {
    field int value;

    method int getValue () {
        return value;
    }

    constructor Tile new(int nValue) {
        let value = nValue;
        return this;
    }

    method Tile Add (Tile other) {
        return Tile.new(other.getValue() + value);
    }

    method void DrawTile (int value) {
        if (value < 10) {
            do Output.printInt(value);
            do Output.printString("  |   ");
        }
        if (value > 10) {
            do Output.printInt(value);
            do Output.printString(" |   ");
        }
        
        //do Output.printInt(value);
        //do Output.printString("  |   ");
        return;
    }
    
    method void dispose () {
        do Memory.deAlloc(this);
        return;
    }
}